extends layout

block content
	div(class='container')
		div(class='row')
			div(class='col-md-4')
			div(class='col-md-4')
				form(role='form', action='/register', method='post', style='max-width: 300px;')
					.form-group
						label Username
						input.form-control(type='text', name='username', placeholder='Enter username')
					.form-group
						label Password
						input.form-control(type='password', name='password', placeholder='Enter password')
					button.btn.btn-default(type='submit', class='loginBtns') Submit
					&nbsp;
					a(href='/')
						button.btn.btn-default(type='button', class='loginBtns', class='cancel') Cancel
			div(class='col-md-4')